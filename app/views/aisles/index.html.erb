<div class="page-header">
  <h1>
    Aisles
    <a href="/aisles/new" class="btn btn-lg btn-success">New Aisle</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Actions</th>
      </tr>

      <% @aisles.each do |aisle| %>
      <tr>
        <td>
          <a href="/aisles/<%= aisle.id %>" class="btn btn-primary">Show</a>
          <a href="/aisles/<%= aisle.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_aisle/<%= aisle.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
