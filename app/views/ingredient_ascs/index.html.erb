<div class="page-header">
  <h1>
    Ingredient ascs
    <a href="/ingredient_ascs/new" class="btn btn-lg btn-success">New Ingredient asc</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Ingredient</th>
        <th>R</th>
        <th>Actions</th>
      </tr>

      <% @ingredient_ascs.each do |ingredient_asc| %>
      <tr>
        <td>
          <% if ingredient_asc.ingredient.present? %>
            <a href="/ingredients/<%= ingredient_asc.ingredient.id %>">
              <%= ingredient_asc.ingredient.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if ingredient_asc.recipe.present? %>
            <a href="/recipes/<%= ingredient_asc.recipe.id %>">
              <%= ingredient_asc.recipe.description %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/ingredient_ascs/<%= ingredient_asc.id %>" class="btn btn-primary">Show</a>
          <a href="/ingredient_ascs/<%= ingredient_asc.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_ingredient_asc/<%= ingredient_asc.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @ingredient_ascs, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
