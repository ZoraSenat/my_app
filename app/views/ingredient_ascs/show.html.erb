<div class="page-header">
  <h3>Ingredient Asc #<%= @ingredient_asc.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Ingredient</dt>
      <dd>
        <% if @ingredient_asc.ingredient.present? %>
          <a href="/ingredients/<%= @ingredient_asc.ingredient_id %>">
            <%= @ingredient_asc.ingredient.name %>
          </a>
        <% end %>
      </dd>

      <dt>R</dt>
      <dd>
        <% if @ingredient_asc.recipe.present? %>
          <a href="/recipes/<%= @ingredient_asc.r_id %>">
            <%= @ingredient_asc.recipe.description %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/ingredient_ascs" class="btn btn-primary">
        Back
      </a>
      <a href="/ingredient_ascs/<%= @ingredient_asc.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_ingredient_asc/<%= @ingredient_asc.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
